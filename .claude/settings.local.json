{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash",
      "BashOutput",
      "Edit",
      "Glob",
      "Grep",
      "KillShell",
      "NotebookEdit",
      "Read",
      "SlashCommand",
      "Task",
      "TodoWrite",
      "WebFetch",
      "WebSearch",
      "Write",
      "mcp__ide",
      "mcp__exa",
      "mcp__context7",
      "mcp__mcp-deepwiki",
      "mcp__Playwright",
      "mcp__spec-workflow",
      "mcp__open-websearch",
      "mcp__serena",
      "all",
      "Bash(cd:*)",
      "Bash(python -c \"from reachy_mini import ReachyMini; help\\(ReachyMini\\)\")",
      "Bash(pip show reachy-mini)",
      "mcp__open-websearch__search",
      "mcp__open-websearch__fetchGithubReadme",
      "mcp__web-reader__webReader",
      "mcp__zread__get_repo_structure",
      "mcp__zread__read_file",
      "Bash(dir:*)"
    ],
    "deny": [],
    "ask": []
  },
  "hooks": {},
  "alwaysThinkingEnabled": true,
  "outputStyle": "default",
  "statusLine": {
    "type": "command",
    "command": "%USERPROFILE%\\.claude\\ccline\\ccline.exe",
    "padding": 0
  },
  "model": "opus"
}